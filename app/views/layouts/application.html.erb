<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <div class="container">
       <%= link_to '/' do %>
        <span>Bookers</span>
       <% end %>
        <% if user_signed_in? %>
          <ul>
            <li>
            <%= link_to user_path(current_user.id) do %>
              <span> Home</span>
            <% end %>
            </li>
            <li>
            <%= link_to users_path do %>
              <span> Users</span>
            <% end %>
            </li>
            <li>
            <%= link_to books_path do %>
              <span> Books</span>
            <% end %>
            </li>
            <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <span> logout</span>
            <% end %>
            </li>
          </ul>
        <% else %>
          <ul>
            <li>
            <%= link_to '/' do %>
              <span class=> Home</span>
            <% end %>
            </li>
            <li>
            <%= link_to home_about_path do %>
              <span> About</span>
            <% end %>
            </li>
            <li>
            <%= link_to new_user_registration_path do %>
              <span> sign up</span>
            <% end %>
            </li>
            <li>
            <%= link_to new_user_session_path do %>
              <span> login</span>
            <% end %>
            </li>
          </ul>
        <% end %>
      </div>
    </header>
    <div class="body">
      <div class="container">
        <p id="notice"><%= notice %></p>
          <div class="row">
          <%= yield %>
          </div>
          <div class="row">
            <div><p>CpoyRight Infratop.inc</p></div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>