<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav header class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="nav navbar-nav navbar-left" href ="/">
          <span class="title" style="color:#ffffff;">Bookers</span>
        </a>
        <nav>
          <ul class="nav navbar-nav navbar-right">
        </nav>

        <% if user_signed_in? %>
          <ul class="nav navbar-nav navbar-right">
            <li>
            <%= link_to user_path(current_user.id) do %>
             <i class="fas fa-home nav-link text-light">Home</i>
            <% end %>
            </li>
            <li>
            <%= link_to users_path do %>
            <i class="fas fa-users nav-link text-light"> Users</i>
            <% end %>
            </li>
            <li>
            <%= link_to books_path do %>
            <i class="fas fa-book-open nav-link text-light">Books</i>
            <% end %>
            </li>
            <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
             <i class="fas fa-sign-out-alt nav-link text-light">logout</i>
            <% end %>
            </li>
          </ul>
        <% else %>
          <ul class="nav navbar-nav navbar-right">
            <li>
            <%= link_to '/' do %>
             <i class="fas fa-home nav-link text-light">Home</i>
            <% end %>
            </li>

            <li>
            <%= link_to home_about_path do %>
             <i class="fas fa-link nav-link text-light">About</i>
            <% end %>
            </li>

            <li>
            <%= link_to new_user_registration_path do %>
            <a class="fas fa-user-plus nav-link text-light" href="/users/sign_up"> sign up</a>
            <% end %>
            </li>
            <li>
            <%= link_to new_user_session_path do %>
           <a class="fas fa-sign-in-alt nav-link text-light" href="/users/sign_in"> login</a>
            <% end %>
            </li>
          </ul>
        <% end %>
        </nav>
      </div>
    </header>
    <div class="body">
      <div class="container">
        <p id="notice"><%= notice %></p>
          <div class="row">
           <%= yield %>
          </div>
          <div class="container mt-5">
            <div class="row">
             <div class="mx-auto">
              <p>CpoyRight Infratop.inc</p>
             </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>