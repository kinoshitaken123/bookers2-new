<table class="table table-user">
  <thead>
    <tr>
      <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg"%>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>Introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th colspan="2">
       <%= link_to edit_user_path(user), class:"btn btn-default btn-block" do %>
       <i class="fas fa-user-cog"></i>
       <% end %>
      </th>
    </tr>

  </tbody>
</table>