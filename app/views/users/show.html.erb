<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/error', model: @book %>

    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'users/user', user: @user %>
      <h2>New book</h2>
      <%= render 'books/book', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
	    <h2><span>Books</span></h2>
      <table class="table table-condensed">
      <thead>
        <tr>
          <th colspan="1"></th>
          <th>Title</th>
          <th>Opiniton</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <% @books.each do |book| %>
        <tbody>
          <tr><%= link_to book.user do %>
            <td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %></td>
            <% end %>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>

          </tr>
        </tbody>
      <% end %>
    </table>
	</div>
 </div>
 </div>